--          Games That are Avalible:
--          Prison Life
--          More Coming Soon!












--        Start of Script



--          Prison Life

if game.PlaceId == 155615604 then
    local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
    local Window = Library.CreateLib("Prison Life, By Hadi#7080", "Sentinel")
        --  Player
    local Player = Window:NewTab("Player")
    local PlayerSection = Player:NewSection("Player Proporties")
    PlayerSection:NewSlider("WalkSpeed", "Changes the WalkSpeed", 250, 16, function(v) -- 500 (MaxValue) | 0 (MinValue)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v
    end)
    PlayerSection:NewSlider("JumpPower", "Changes the WalkSpeed", 500, 50, function(v) -- 500 (MaxValue) | 0 (MinValue)
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = v
    end)

        -- Weapons


    local Weapons = Window:NewTab("Weapons")
    local GunSection = Weapons:NewSection("Give Gun")
    GunSection:NewButton("Remington 870", "Gives Remington 870", function()
        local A_1 = game:GetService("Workspace")["Prison_ITEMS"].giver["Remington 870"].ITEMPICKUP
        local Event = game:GetService("Workspace").Remote.ItemHandler
        Event:InvokeServer(A_1)

    end)
    GunSection:NewButton("AK-47", "Gives Remington 870", function()
        local A_1 = game:GetService("Workspace")["Prison_ITEMS"].giver["AK-47"].ITEMPICKUP
        local Event = game:GetService("Workspace").Remote.ItemHandler
        Event:InvokeServer(A_1)

    end)


           -- Mod


    local ModWeapon = Weapons:NewSection("Mod")
    ModWeapon:NewButton("Mod Remington 870", "Mod", function()
        local player = game:GetService("Players").LocalPlayer --If theres an error then, reset and/or delete the script and play it again
        local gun = player.Backpack:FindFirstChild("Remington 870") or player.Character:FindFirstChild("Remington 870") --Edit The "Remington 870" to whatever gun you have!
        local sM = require(gun:FindFirstChild("GunStates"))
         
        sM["Damage"] = math.huge --too op, u can set that to 0.05 if u want, it will still be op xD
        sM["MaxAmmo"] = math.huge
        sM["CurrentAmmo"] = math.huge
        sM["StoredAmmo"] = math.huge
        sM["FireRate"] = 0.1 --too op, u can set that to 0.5 or something if u want :P
        sM["AmmoPerClip"] = math.huge
        sM["Range"] = math.huge
        sM["ReloadTime"] = 0.000000001
        sM["Spread"] = 0
        sM["Bullets"] = 1
        sM["AutoFire"] = true --too op, u can set that to false if u want :P
    end)
    ModWeapon:NewButton("Mod AK-47", "Mod", function()
        local player = game:GetService("Players").LocalPlayer --If theres an error then, reset and/or delete the script and play it again
        local gun = player.Backpack:FindFirstChild("AK-47") or player.Character:FindFirstChild("AK-47") --Edit The "Remington 870" to whatever gun you have!
        local sM = require(gun:FindFirstChild("GunStates"))
         
        sM["Damage"] = math.huge --too op, u can set that to 0.05 if u want, it will still be op xD
        sM["MaxAmmo"] = math.huge
        sM["CurrentAmmo"] = math.huge
        sM["StoredAmmo"] = math.huge
        sM["FireRate"] = 0.1 --too op, u can set that to 0.5 or something if u want :P
        sM["AmmoPerClip"] = math.huge
        sM["Range"] = math.huge
        sM["ReloadTime"] = 0.000000001
        sM["Spread"] = 0
        sM["Bullets"] = 1
        sM["AutoFire"] = true --too op, u can set that to false if u want :P
    end)
end
